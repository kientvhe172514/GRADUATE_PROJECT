apiVersion: v1
kind: Secret
metadata:
  name: mongodb-secret
  namespace: infrastructure
  labels:
    app: mongodb
    tier: database
type: Opaque
stringData:
  MONGO_INITDB_ROOT_USERNAME: "${MONGODB_USERNAME}"
  MONGO_INITDB_ROOT_PASSWORD: "${MONGODB_PASSWORD}"
