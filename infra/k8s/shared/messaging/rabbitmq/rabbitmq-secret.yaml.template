apiVersion: v1
kind: Secret
metadata:
  name: rabbitmq-secret
  namespace: infrastructure
  labels:
    app: rabbitmq
    tier: messaging
type: Opaque
stringData:
  RABBITMQ_DEFAULT_USER: "${RABBITMQ_USERNAME}"
  RABBITMQ_DEFAULT_PASS: "${RABBITMQ_PASSWORD}"
