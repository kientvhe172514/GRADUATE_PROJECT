# Application
NODE_ENV=development
APP_PORT=3004
SERVICE_NAME=notification

# Mock Services (set to 'true' for development without external services)
USE_MOCK_SERVICES=true

# Database
DATABASE_URL=postgresql://postgres:postgres123@localhost:5432/microservices_db

# RabbitMQ
RABBITMQ_URL=amqp://admin:rabbitmq123@localhost:5672
RABBITMQ_NOTIFICATION_QUEUE=notification_queue

# JWT
JWT_SECRET=your_jwt_secret_here_change_in_production
JWT_EXPIRY=24h

# Firebase Cloud Messaging - Option 2: Environment Variables
# Get these values from Firebase Console:
# 1. Go to https://console.firebase.google.com/
# 2. Project Settings → Service accounts → Generate new private key
# 3. Open the downloaded JSON file and copy these values:
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project-id.iam.gserviceaccount.com

# Email Service (SMTP - Nodemailer)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_NAME=Zentry HR System
SMTP_FROM_EMAIL=noreply@zentry.com

# SMS Service (Optional - Twilio example)
# SMS_PROVIDER=twilio
# TWILIO_ACCOUNT_SID=your_account_sid
# TWILIO_AUTH_TOKEN=your_auth_token
# TWILIO_PHONE_NUMBER=+1234567890

# Logging
LOG_LEVEL=debug

# CORS
CORS_ORIGIN=http://localhost:3000