{
  "info": {
    "name": "Auth Service - Temporary Password Flow",
    "description": "Test collection for temporary password change flow",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "1. Login with Temporary Password (Expect 403)",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Status code is 403\", function () {",
              "    pm.response.to.have.status(403);",
              "});",
              "",
              "pm.test(\"Error code is TEMPORARY_PASSWORD_MUST_CHANGE\", function () {",
              "    var jsonData = pm.response.json();",
              "    pm.expect(jsonData.error_code).to.eql(\"TEMPORARY_PASSWORD_MUST_CHANGE\");",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"{{test_email}}\",\n  \"password\": \"1\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/auth/login",
          "host": ["{{base_url}}"],
          "path": ["auth", "login"]
        }
      },
      "response": []
    },
    {
      "name": "2. Change Password - Weak Password (Expect 400)",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Status code is 400\", function () {",
              "    pm.response.to.have.status(400);",
              "});",
              "",
              "pm.test(\"Error message mentions password requirements\", function () {",
              "    var jsonData = pm.response.json();",
              "    pm.expect(jsonData.message).to.include(\"Mật khẩu\");",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"{{test_email}}\",\n  \"current_password\": \"1\",\n  \"new_password\": \"weak\",\n  \"confirm_password\": \"weak\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/auth/change-temporary-password",
          "host": ["{{base_url}}"],
          "path": ["auth", "change-temporary-password"]
        }
      },
      "response": []
    },
    {
      "name": "3. Change Password - Mismatch (Expect 400)",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Status code is 400\", function () {",
              "    pm.response.to.have.status(400);",
              "});",
              "",
              "pm.test(\"Error message about password mismatch\", function () {",
              "    var jsonData = pm.response.json();",
              "    pm.expect(jsonData.message).to.include(\"không khớp\");",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"{{test_email}}\",\n  \"current_password\": \"1\",\n  \"new_password\": \"NewPass@123\",\n  \"confirm_password\": \"Different@123\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/auth/change-temporary-password",
          "host": ["{{base_url}}"],
          "path": ["auth", "change-temporary-password"]
        }
      },
      "response": []
    },
    {
      "name": "4. Change Password - Wrong Current Password (Expect 401)",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Status code is 401\", function () {",
              "    pm.response.to.have.status(401);",
              "});",
              "",
              "pm.test(\"Error message about invalid current password\", function () {",
              "    var jsonData = pm.response.json();",
              "    pm.expect(jsonData.message).to.include(\"Mật khẩu hiện tại không đúng\");",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"{{test_email}}\",\n  \"current_password\": \"wrongpassword\",\n  \"new_password\": \"NewPass@123\",\n  \"confirm_password\": \"NewPass@123\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/auth/change-temporary-password",
          "host": ["{{base_url}}"],
          "path": ["auth", "change-temporary-password"]
        }
      },
      "response": []
    },
    {
      "name": "5. Change Password - Success (Expect 200)",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Status code is 200\", function () {",
              "    pm.response.to.have.status(200);",
              "});",
              "",
              "pm.test(\"Response has access_token\", function () {",
              "    var jsonData = pm.response.json();",
              "    pm.expect(jsonData.data.access_token).to.exist;",
              "    pm.environment.set(\"access_token\", jsonData.data.access_token);",
              "});",
              "",
              "pm.test(\"Response has refresh_token\", function () {",
              "    var jsonData = pm.response.json();",
              "    pm.expect(jsonData.data.refresh_token).to.exist;",
              "});",
              "",
              "pm.test(\"Response has user info\", function () {",
              "    var jsonData = pm.response.json();",
              "    pm.expect(jsonData.data.user).to.exist;",
              "    pm.expect(jsonData.data.user.email).to.eql(pm.environment.get(\"test_email\"));",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"{{test_email}}\",\n  \"current_password\": \"1\",\n  \"new_password\": \"{{new_password}}\",\n  \"confirm_password\": \"{{new_password}}\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/auth/change-temporary-password",
          "host": ["{{base_url}}"],
          "path": ["auth", "change-temporary-password"]
        }
      },
      "response": []
    },
    {
      "name": "6. Login with New Password (Expect 200)",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Status code is 200\", function () {",
              "    pm.response.to.have.status(200);",
              "});",
              "",
              "pm.test(\"Login successful with new password\", function () {",
              "    var jsonData = pm.response.json();",
              "    pm.expect(jsonData.success).to.be.true;",
              "    pm.expect(jsonData.data.access_token).to.exist;",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"{{test_email}}\",\n  \"password\": \"{{new_password}}\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/auth/login",
          "host": ["{{base_url}}"],
          "path": ["auth", "login"]
        }
      },
      "response": []
    },
    {
      "name": "7. Try Change Temporary Password Again (Expect 400)",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Status code is 400\", function () {",
              "    pm.response.to.have.status(400);",
              "});",
              "",
              "pm.test(\"Error message about not using temporary password\", function () {",
              "    var jsonData = pm.response.json();",
              "    pm.expect(jsonData.message).to.include(\"không sử dụng mật khẩu tạm\");",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"{{test_email}}\",\n  \"current_password\": \"{{new_password}}\",\n  \"new_password\": \"AnotherPass@456\",\n  \"confirm_password\": \"AnotherPass@456\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/auth/change-temporary-password",
          "host": ["{{base_url}}"],
          "path": ["auth", "change-temporary-password"]
        }
      },
      "response": []
    }
  ],
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:3000",
      "type": "string"
    },
    {
      "key": "test_email",
      "value": "test-temp-password@example.com",
      "type": "string"
    },
    {
      "key": "new_password",
      "value": "NewSecure@Pass123",
      "type": "string"
    }
  ]
}
