# ============================================
# DATABASE CONFIGURATION
# ============================================
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/auth_db

# ============================================
# JWT CONFIGURATION
# ============================================
# Secret key for JWT signing (use strong random string in production)
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production_min_32_chars
# Access token expiration (short-lived)
JWT_EXPIRES_IN=15m
# Refresh token expiration (long-lived)
JWT_REFRESH_EXPIRES_IN=7d

# ============================================
# SERVER CONFIGURATION
# ============================================
# Port for Auth Service
APP_PORT=3001
# Environment: development | production | test
NODE_ENV=development

# ============================================
# COOKIE CONFIGURATION
# ============================================
# Domain for HttpOnly cookies (use your domain in production)
COOKIE_DOMAIN=localhost
# CORS allowed origins (comma-separated, use specific domains in production)
# Example: http://localhost:3000,https://yourdomain.com
CORS_ORIGINS=http://localhost:3000,http://localhost:4200

# ============================================
# RABBITMQ CONFIGURATION
# ============================================
# RabbitMQ connection URL
RABBITMQ_URL=amqp://admin:rabbitmq123@localhost:5672
# Queue names for microservices communication
RABBITMQ_EMPLOYEE_QUEUE=employee_queue
RABBITMQ_IAM_QUEUE=iam_queue
RABBITMQ_NOTIFICATION_QUEUE=notification_queue

# ============================================
# REDIS CONFIGURATION (Optional - for caching)
# ============================================
REDIS_HOST=localhost
REDIS_PORT=6379
# REDIS_PASSWORD=your_redis_password

# ============================================
# LOGGING & MONITORING
# ============================================
# Log level: error | warn | info | debug
LOG_LEVEL=debug

# ============================================
# SECURITY
# ============================================
# Rate limiting (requests per minute)
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100

# ============================================
# EMAIL CONFIGURATION (for password reset)
# ============================================
# SMTP settings
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@yourcompany.com

# ============================================
# SWAGGER DOCUMENTATION
# ============================================
# Enable/disable Swagger in production
SWAGGER_ENABLED=true

# ============================================
# TEMPORARY PASSWORD SETTINGS
# ============================================
# Temporary password expiration (in minutes)
TEMP_PASSWORD_EXPIRY_MINUTES=60

# ============================================
# AUDIT LOG RETENTION
# ============================================
# Days to keep audit logs
AUDIT_LOG_RETENTION_DAYS=90